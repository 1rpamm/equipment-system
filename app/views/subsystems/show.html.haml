- model_class = Subsystem
.page-header
  %h1 Подсистема

%p
  %strong Производитель
  %br
  = @subsystem.device.vendor.name
%p
  %strong= model_class.human_attribute_name(:device_id) + ':'
  %br
  = @subsystem.device.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @subsystem.name
%p
  %strong= model_class.human_attribute_name(:subvendor_hex) + ':'
  %br
  = @subsystem.subvendor_hex
%p
  %strong= model_class.human_attribute_name(:subdevice_hex) + ':'
  %br
  = @subsystem.subdevice_hex


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), subsystems_path, :class => 'btn'
  -if logged_in? && current_user.admin_user?
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_subsystem_path(@subsystem), :class => 'btn btn-warning'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), subsystem_path(@subsystem), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) }, :class => 'btn btn-danger'
