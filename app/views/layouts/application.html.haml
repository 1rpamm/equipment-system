-#variables:
-new_equip = Equipment.where("accepted_at"  => nil).where("deleted_at" => nil).includes(:room).order("room_id, domain_name")
-new_equip_count = new_equip.count
-copyright = "ИВЦ МГИУ, 2012-#{Time.now.year}"

-#code:
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "EquipmentSystem"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    =favicon_link_tag 'img/favicon.png', :type=>'image/img'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid.FUCK_YOU_RAILS
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to image_tag("logo.png", :border => 0), root_path, class: 'brand'
          .nav-collapse.collapse
            %ul.nav
              -menu_items.each do |item|
                -case item[:admin]
                -when "admin_user"
                  -if admin_user?
                    %li{class: controller_name==item[:name] ? 'active' : nil}=link_to item[:title], url_for(:controller=>item[:name])
                -when "admin_equip"
                  -if admin_equip?
                    %li{class: controller_name==item[:name] ? 'active' : nil}=link_to item[:title], url_for(:controller=>item[:name])
                -when "admin_inv"
                  -if admin_inv?
                    %li{class: controller_name==item[:name] ? 'active' : nil}=link_to item[:title], url_for(:controller=>item[:name])
                -when "public"
                  -if logged_in?
                    %li{class: controller_name==item[:name] ? 'active' : nil}=link_to item[:title], url_for(:controller=>item[:name])

            .nav.pull-right
              %form.navbar-search.pull-left
                %input.search-query{:placeholder => "Search", :type => "text"}
              -if logged_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu()
                    %li= link_to "Профиль", user_path(current_user)
                    %li= link_to "Редактировать", edit_user_path(current_user)
                    %li.divider
                    %li= link_to "Выход", logout_path
              -else
                %li= link_to "Вход", new_session_path

    .container-fluid
      .row-fluid
        = bootstrap_flash
        = yield

    .clear
      .muted
        .pull-right
          &copy; #{copyright}

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"