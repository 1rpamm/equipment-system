- model_class = Inventory
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:inv_num) + ':'
  %br
  = @inventory.inv_num
%p
  %strong= model_class.human_attribute_name(:act_num) + ':'
  %br
  = @inventory.act_num
%p
  %strong= model_class.human_attribute_name(:act_type_id) + ':'
  %br
  = @inventory.act_type.name
%p
  %strong= model_class.human_attribute_name(:accept_date) + ':'
  %br
  =l @inventory.accept_date, format: :long
%p
  %strong Оборудование:
  -equipment = Equipment.where(:inventory_id => @inventory).order(:domain_name)
  -equipment.each do |equip|
    %br
    =link_to equip.domain_name, equip

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), inventories_path, :class => 'btn'
  -if logged_in? && current_user.admin_user?
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_inventory_path(@inventory), :class => 'btn btn-warning'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), inventory_path(@inventory), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) }, :class => 'btn btn-danger'
