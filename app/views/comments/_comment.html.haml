.comment
  .comment_head
    -if @equipment
      =link_to "Редактровать", edit_equipment_comment_path(@equipment,comment)
      =link_to "Удалить", [@equipment,comment], :confirm => "Вы уверены?", :method => :delete
    .time=l comment.created_at, :format => :long
    -#.id ##{comment.id}
  .comment_body
    .name
      #{image_tag("comment.png",:size => "32x32")}
      =comment.user ? "#{comment.user.name}:" : nil
    .comment_content
      =simple_format(comment.body)
  .clear
.clearfix